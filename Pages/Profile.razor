@page "/profile"
@inject NavigationManager NavigationManager
@inject UserService UserService

<div class="section bg">
    <div class="container">
			<div class="row full-height justify-content-center">
				<div class="col-12 text-center align-self-center py-5">
					<button type="button" class="btn btn mb-2" @onclick="goToMainMenu">Back</button>
					<div class="section pb-5 pt-5 pt-sm-2 text-center">
						<div class="card-3d-wrap mx-auto">
							<div class="card-3d-wrapper">
								<div class="card-front">
									<div class="center-wrap">
										<div class="section text-center">
                                            <div class="card-body">
                                                <h1 class="yellow-text">@UserService.Username</h1>
                                                <p class="yellow-text">Enemies Defeated: @UserService.enemyCounter</p>
                                                <p class="yellow-text">Gold Spent: @UserService.GoldSpent</p>
                                                <p class="yellow-text">Towers Bought: @UserService.TowerBought</p>
                                            </div>
				      					</div>
			      					</div>
			      				</div>
			      			</div>
			      		</div>
			      	</div>
		      	</div>
	      	</div>
	    </div>
	</div>

@code {
    private void goToMainMenu()
    {
        NavigationManager.NavigateTo("/mainmenu");
    }
}