@page "/register"

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="mb-3 text-center">Register</h3>
            <form>
                <div class="form-group mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input id="username" class="form-control" placeholder="Username" required />
                </div>
                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input id="email" class="form-control" placeholder="Email" required type="email" />
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input id="password" class="form-control" placeholder="Password" required type="password" />
                </div>
                <button class="btn btn-primary w-100" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>